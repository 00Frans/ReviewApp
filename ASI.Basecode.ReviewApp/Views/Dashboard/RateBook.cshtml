@model ASI.Basecode.Services.ServiceModels.RatingViewModel

@{
    var book = (ASI.Basecode.Services.ServiceModels.BookViewModel)ViewData["Book"];
}

<form asp-controller="Dashboard" asp-action="ViewBookAndReview" method="get">
    <input type="hidden" name="BookId" value="@book.BookId" />
    <button type="submit" class="btn btn-sm btn-outline-secondary">Go Back</button>
</form>

<div class="container pt-5">
    <h2>Rate Book</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="card-img"><img class="img-thumbnail" src="@book.BookImage" alt="Image" style="width: 200px; height:200px" /></div>
                    <h4 class="card-text font-weight-bold">@book.Title</h4>
                    <p class="card-text">By <b>@book.Author</b></p>
                    <p class="card-text"><b>@book.Genre</b></p>
                    <p class="card-text">Total Rating: <b>@ViewData["TotalStar"]</b></p>
                    <p class="card-text"><b>@book.Description</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <form asp-controller="Dashboard" asp-action="RateBook" method="post">
                <input type="hidden" name="BookId" value="@book.BookId" />
                
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Rating</label>
                            <select class="form-control" asp-for="RateStars">
                                <option value="1">1 Star</option>
                                <option value="2">2 Stars</option>
                                <option value="3">3 Stars</option>
                                <option value="4">4 Stars</option>
                                <option value="5">5 Stars</option>
                            </select>
                            <span asp-validation-for="RateStars" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Comment</label>
                            <textarea class="form-control" asp-for="RateComment" ></textarea>
                            <span asp-validation-for="RateComment" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-sm btn-outline-secondary">Post</button>
            </form>
        </div>
    </div>
</div>