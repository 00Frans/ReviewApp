@model ASI.Basecode.Services.ServiceModels.BookViewModel

@section styles {
    <link rel="stylesheet" href="~/css/book.css" />
}
@{
    ViewData["Title"] = "Book Master";
}

<h2 class="mt-3">Books</h2>
<div class="addbtn">
<a asp-controller="Book" asp-action="AddBook" class="add btn btn-primary">Add Book</a>
</div>
<div class="table-container" style="height:600px;">
<table class="table" id="myTable">
    <thead class="custom-thead">
        <tr>
            <th>Book ID</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Added By</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Isbn</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.CreatedBy</td>
                <td>@book.Genre</td>
                <td>@book.Description</td>
                <td>
                    <img src="@book.BookImage" alt="Image" width="100" height="100"/>
                </td>
                <td class="button" style="min-width: 260px;">
                    <form asp-controller="Book" asp-action="EditBook" method="get">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <button type="submit">
                            <i class="bi bi-pencil-square" style="font-size: 15px;">Edit</i>
                        </button>
                    </form>
                        <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#BookModal_@book.BookId">
                        <i class="bi bi-trash">Delete</i>
                    </button>
                    <form asp-controller="Book" asp-action="ViewBook" method="get">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <button type="submit">
                            <i class="bi bi-pencil-square" style="font-size: 15px;">View</i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(1 == Model.Page ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("List", new { page = Model.Page - 1, pageSize = Model.PageSize })" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @if (Model.TotalPages > 1)
        {
            <li class="page-item @(1 == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("List", new { page = 1, pageSize = Model.PageSize })">1</a>
            </li>

            @for (int i = Math.Max(2, Model.Page - 1); i <= Math.Min(Model.TotalPages - 1, Model.Page + 1); i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("List", new { page = i, pageSize = Model.PageSize })">@i</a>
                </li>
            }

            <li class="page-item @(Model.TotalPages == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("List", new { page = Model.TotalPages, pageSize = Model.PageSize })">@Model.TotalPages</a>
            </li>
        }

        <li class="page-item @(Model.TotalPages == Model.Page ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("List", new { page = Model.Page + 1, pageSize = Model.PageSize })" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

@foreach (var book in Model.Books)
{
    <!-- Modal -->
    <div class="modal fade" id="BookModal_@book.BookId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Book" asp-action="DeleteBook" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <h2>Are you sure you want to delete this genre?</h2>
                        <h3>@book.Title</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Include Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

