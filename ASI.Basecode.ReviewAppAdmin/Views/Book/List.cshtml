@model List<ASI.Basecode.Services.ServiceModels.BookViewModel>
@section styles {
    <link rel="stylesheet" href="~/css/book.css" />
}
@{
    ViewData["Title"] = "Book Master";
}
<h2 class="mt-3">Books</h2>
<div class="addbtn">
<a asp-controller="Book" asp-action="AddBook" class="add btn btn-primary">Add Book</a>
</div>
<div class="table-container" style="height:600px;">
<table class="table" id="myTable">
    <thead class="custom-thead">
        <tr>
            <th>Book ID</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Added By</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Isbn</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.CreatedBy</td>
                <td>@book.Genre</td>
                <td>@book.Description</td>
                <td>
                    <img src="@book.BookImage" alt="Image" width="100" height="100"/>
                </td>
                <td class="button" style="min-width: 260px;">
                    <form asp-controller="Book" asp-action="EditBook" method="get">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <button type="submit">
                            <i class="bi bi-pencil-square" style="font-size: 15px;">Edit</i>
                        </button>
                    </form>
                        <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#BookModal_@book.BookId">
                        <i class="bi bi-trash">Delete</i>
                    </button>
                    <form asp-controller="Book" asp-action="ViewBook" method="get">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <button type="submit">
                            <i class="bi bi-pencil-square" style="font-size: 15px;">View</i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<div>
    Page @ViewData["Page"] of @ViewData["TotalPages"]

    @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
    {
        <a href="@Url.Action("List", new { page = i, pageSize = ViewData["PageSize"] })">[@i]</a>
    }
</div>

@foreach (var book in Model)
{
    <!-- Modal -->
    <div class="modal fade" id="BookModal_@book.BookId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Book" asp-action="DeleteBook" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="BookId" value="@book.BookId">
                        <h2>Are you sure you want to delete this genre?</h2>
                        <h3>@book.Title</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}