@model List<ASI.Basecode.Services.ServiceModels.GenreViewModel>
@section styles {
    <link rel="stylesheet" href="~/css/book.css" />
}
@{
    ViewData["Title"] = "Book Genre Master";
}
<h2 class="mt-3">Genre</h2>
<div class="addbtn">
    <a asp-controller="Genre" asp-action="AddGenre" class="add btn btn-primary">Add Genre</a>
</div>
<div class="table-container" style="height:600px;">
    <table class="table" id="myTable">
        <thead class="custom-thead">
            <tr>
                <th>Genre ID</th>
                <th>Genre Name</th>
                <th>Created By</th>
                <th>Date Added</th>
                <th>Updated By</th>
                <th>Date Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.GenreId</td>
                    <td>@genre.GenreName</td>
                    <td>@genre.GenreCreatedBy</td>
                    <td>@genre.DateAdded</td>
                    <td>@genre.UpdatedBy</td>
                    <td>@genre.UpdatedDate</td>
                    <td class="button" style="min-width: 260px;">
                        <form asp-controller="Genre" asp-action="EditGenre" method="get">
                            <input type="hidden" name="GenreId" value="@genre.GenreId">
                            <button type="submit">
                                <i class="bi bi-pencil-square" style="font-size: 15px;">Edit</i>
                            </button>
                        </form>
                        <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#GenreModal_@genre.GenreId">
                            <i class="bi bi-trash">Delete</i>
                        </button>
                        <form asp-controller="Genre" asp-action="ViewGenre" method="get">
                            <input type="hidden" name="GenreId" value="@genre.GenreId">
                            <button type="submit">
                                <i class="bi bi-pencil-square" style="font-size: 15px;">View</i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    Page @ViewData["Page"] of @ViewData["TotalPages"]

    @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
    {
        <a href="@Url.Action("List", new { page = i, pageSize = ViewData["PageSize"] })">[@i]</a>
    }
</div>

@foreach (var genre in Model)
{
    <!-- Modal -->
    <div class="modal fade" id="GenreModal_@genre.GenreId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Genre" asp-action="DeleteGenre" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Genre</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="GenreId" value="@genre.GenreId">
                        <h2>Are you sure you want to delete this genre?</h2>
                            <h3>@genre.GenreName</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}