@model ASI.Basecode.Services.ServiceModels.AdminViewModel
@section styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
@{
    ViewData["Title"] = "Admin Details";
}
<div class="mt-5">
    <a asp-action="List" asp-controller="Admin" class="btn btn-primary back">< Back</a>
</div>
<div class="row">
    <div class="col-6 editform">
        <div class="detaillabel">
            <h2>ACCOUNT DETAILS.</h2>
        </div>
        <div class="form-group">
            <label>Admin ID</label>
            <input class="form-control" asp-for="AdminId" value="@Model.AdminId">
        </div>
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" asp-for="Email" value="@Model.Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Password" value="@Model.Password" />
        </div>

    </div>
    <div class="col-6 editform1">
        <div class="form-group" style="margin-left:45%;">
            <a asp-controller="Admin" asp-action="EditAdmin" class="edit btn btn-primary">
                <i class="bi bi-pencil-square icon"></i> Edit Account
            </a>
            <button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-primary">
                <i class="bi bi-trash icon-gradient"></i>
            </button>
        </div>
        <div class="form-group">
            <label>Created By</label>
            <input class="form-control" asp-for="CreatedBy" value="@Model.CreatedBy">
        </div>
        <div class="form-group">
            <label>Time Created</label>
            <input class="form-control" asp-for="CreatedTime" value="@Model.CreatedTime" />
        </div>
        <div class="form-group">
            <label>Updated By</label>
            <input class="form-control" asp-for="UpdatedBy" value="@Model.UpdatedBy" />
        </div>
        <div class="form-group">
            <label>Time Updated</label>
            <input class="form-control" asp-for="UpdatedTime" value="@Model.UpdatedTime" />
        </div>
    </div>
</div>
