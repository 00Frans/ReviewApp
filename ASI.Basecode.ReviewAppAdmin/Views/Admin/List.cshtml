@model ASI.Basecode.Services.ServiceModels.AdminViewModel
@section styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
@{
    ViewData["Title"] = "Account Master";
}

<div class="add mt-3">
    <a asp-controller="Admin" asp-action="AddAdmin" class="add btn btn-primary">+ Add Account</a>
</div>

<div class="table-container">
    <table class="table" id="myTable">
        <thead class="custom-thead">
            <tr>
                <th>Admin ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Created By</th>
                <th>Created Time</th>
                <th>Updated By</th>
                <th>Updated Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var admin in Model.Admins)
            {
                <tr>
                    <td>@admin.AdminId</td>
                    <td>@admin.Email</td>
                    <td>@admin.Name</td>
                    <td>@admin.CreatedBy</td>
                    <td>@admin.CreatedTime</td>
                    <td>@admin.UpdatedBy</td>
                    <td>@admin.UpdatedTime</td>
                    <td class="button" style="min-width: 260px; display: flex; align-items: center; justify-content: center;">
                        <form asp-controller="Admin" asp-action="EditAdmin" method="get" style="margin-right: 10px;">
                            <input type="hidden" name="AdminId" value="@admin.AdminId">
                            <button type="submit">
                                <i class="bi bi-pencil-square icon-gradient" style="font-size: 15px;"></i>
                            </button>
                        </form>
                        <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#AdminModal_@admin.AdminId">
                            <i class="bi bi-trash icon-gradient"></i>
                        </button>
                        <form asp-controller="Admin" asp-action="ViewAdmin" method="get">
                            <input type="hidden" name="AdminId" value="@admin.AdminId">
                            <button type="submit">
                                <i class="bi bi-pencil-square" style="font-size: 15px;">View</i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(1 == Model.Page ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("List", new { page = Model.Page - 1, pageSize = Model.PageSize })" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @if (Model.TotalPages > 1)
        {
            <li class="page-item @(1 == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("List", new { page = 1, pageSize = Model.PageSize })">1</a>
            </li>

            @for (int i = Math.Max(2, Model.Page - 1); i <= Math.Min(Model.TotalPages - 1, Model.Page + 1); i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("List", new { page = i, pageSize = Model.PageSize })">@i</a>
                </li>
            }

            <li class="page-item @(Model.TotalPages == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("List", new { page = Model.TotalPages, pageSize = Model.PageSize })">@Model.TotalPages</a>
            </li>
        }

        <li class="page-item @(Model.TotalPages == Model.Page ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("List", new { page = Model.Page + 1, pageSize = Model.PageSize })" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>



@foreach (var admin in Model.Admins)
{
    <!-- Modal -->
    <div class="modal fade" id="AdminModal_@admin.AdminId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Admin" asp-action="DeleteAdmin" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="AdminId" value="@admin.AdminId">
                        <h2>Are you sure you want to delete this genre?</h2>
                        <h3>@admin.Email</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}