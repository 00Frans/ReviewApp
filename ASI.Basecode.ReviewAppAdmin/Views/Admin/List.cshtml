@model List<ASI.Basecode.Services.ServiceModels.AdminViewModel>
@section styles {
    <link rel="stylesheet" href="~/css/book.css" />
}
@{
    ViewData["Title"] = "Account Master";
}
<h2 class="mt-3">Books</h2>
<div class="addbtn">
    <a asp-controller="Admin" asp-action="AddAdmin" class="add btn btn-primary">Add Admin</a>
</div>
<div class="table-container" style="height:600px;">
    <table class="table" id="myTable">
        <thead class="custom-thead">
            <tr>
                <th>Admin ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Created By</th>
                <th>Created Time</th>
                <th>Updated By</th>
                <th>Updated Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.AdminId</td>
                    <td>@admin.Email</td>
                    <td>@admin.Name</td>
                    <td>@admin.CreatedBy</td>
                    <td>@admin.CreatedTime</td>
                    <td>@admin.UpdatedBy</td>
                    <td>@admin.UpdatedTime</td>
                    <td class="button" style="min-width: 260px;">
                        <form asp-controller="Admin" asp-action="EditAdmin" method="get">
                            <input type="hidden" name="AdminId" value="@admin.AdminId">
                            <button type="submit">
                                <i class="bi bi-pencil-square" style="font-size: 15px;">Edit</i>
                            </button>
                        </form>
                        <button type="button" style="margin-left: 10px;" data-toggle="modal" data-target="#AdminModal_@admin.AdminId">
                            <i class="bi bi-trash">Delete</i>
                        </button>
                        <form asp-controller="Admin" asp-action="ViewAdmin" method="get">
                            <input type="hidden" name="AdminId" value="@admin.AdminId">
                            <button type="submit">
                                <i class="bi bi-pencil-square" style="font-size: 15px;">View</i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    Page @ViewData["Page"] of @ViewData["TotalPages"]

    @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
    {
        <a href="@Url.Action("List", new { page = i, pageSize = ViewData["PageSize"] })">[@i]</a>
    }
</div>

@foreach (var admin in Model)
{
    <!-- Modal -->
    <div class="modal fade" id="AdminModal_@admin.AdminId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Book" asp-action="DeleteBook" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="BookId" value="@admin.AdminId">
                        <h2>Are you sure you want to delete this genre?</h2>
                        <h3>@admin.Email</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}