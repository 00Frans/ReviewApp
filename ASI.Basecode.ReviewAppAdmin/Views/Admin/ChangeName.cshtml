@model ASI.Basecode.Services.ServiceModels.AdminViewModel
@section styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
@{
    ViewData["Title"] = "Change Name";
}

<a class="bd-viewBR px-3"
   asp-action="Index" asp-controller="Dashboard">
    <span class="bd-viewBRText">&lt;&nbsp;Back </span>
    <span></span>
</a>

<form asp-action="ChangeName" method="post">
    <input type="hidden" asp-for="AdminId" />
    <label>Name</label> 
    <input class="form-control  shadow-none bg-transparent text-white border-white mt-1" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <div class="col">
        <button type="submit" class="bd-viewBR w-100">
            <span class="bd-viewBRText ff-inter fw-bold">Save</span>
            <span></span>
        </button>
    </div>
</form>