@model ASI.Basecode.Services.ServiceModels.AdminViewModel

@{
    ViewBag.LoginView = true;
}
<h2>Reset Password</h2>

<form method="post" enctype="multipart/form-data" asp-action="ResetPassword">
    <div class="form-group">
        <input type="hidden" class="form-control" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>