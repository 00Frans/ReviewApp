@model ASI.Basecode.Services.ServiceModels.AdminViewModel
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row text-dark">
                <div class="col-md-6 mt-5 pt-5 me-5 pe-5">
                    <img src="~/img/review-app.png" alt="" class="mb-3" width="200" style="margin-left:-20%;" />
                    <img src="~/img/cvr.png" alt="" width="500" class="mb-5" style="margin-left:-20%;" />
                    <div class="row text-white">
                        <div class="col-md-12">
                            <div class="col">
                                <p class="text-center">Reset Password</p>
                            </div>
                            <form method="post" enctype="multipart/form-data" asp-action="ResetPassword">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="Email" value="@Model.Email" />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control w-100 shadow-none bg-transparent text-white border-white p-2 mt-1" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" class="form-control w-100 shadow-none bg-transparent text-white border-white p-2 mt-1" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button class="w-100 mt-3 text-white outline-none bd-viewBR" type="submit">
                                    <span class="bd-viewBRText">Reset Password</span>
                                    <span></span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>