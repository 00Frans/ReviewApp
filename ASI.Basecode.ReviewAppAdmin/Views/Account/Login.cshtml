@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="container">
    <div class="row">
        <div class="col text-center reviewapp-container">
            <span class="custom-text text-light-green">Re</span>
            <span class="custom-text text-black">view App</span>
        </div>
    </div>
    <div class="row">
        <div class="col text-center mt-3">
            <h2 class="signIn-text">Sign in</h2>
        </div>
    </div>
    <form method="post" action="/Account/Login" id="loginForm">
        <div class="col text-center mt-3">
            <input type="text" id="adminId" class="username-input"
                   asp-for="Email" placeholder="Enter userid" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col text-center mt-2">
            <input type="password" id="password" class="password-input"
                   asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-sm-8 text-right mt-2">
                <a asp-controller="Account" class="text-muted forgetPassword-label" asp-action="ForgotPassword">@ForgotPass</a>
            </div>
        </div>
        <div class="col text-center mt-2">
            <button class="login-btn login-label" type="submit">
                @Login
            </button>
        </div>
        <div class="d-flex align-items-center justify-content-center pt-4">
            <p class="mb-0 me-2 mr-1">@DontHaveAcc</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-danger">@CreateNew</a>
        </div>
    </form>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}